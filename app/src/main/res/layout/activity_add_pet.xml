<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AddPetActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/hello"
            android:layout_marginTop="72dp"/>
    <ImageView
            android:layout_width="188dp"
            android:layout_height="201dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/test"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/hello"/>
    <ImageView
            android:layout_width="125dp"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/newGeneratedPet"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Your new cReceipture!"
            android:layout_width="159dp"
            android:layout_height="19dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/test" app:layout_constraintHorizontal_bias="0.498"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/petNameInput" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/newGeneratedPet" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Name it!" android:inputType="text"/>
    <Button
            android:text="Set Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/namePetButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/petNameInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>